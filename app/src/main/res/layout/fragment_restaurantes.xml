<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C54343"
    tools:context=".RestaurantesFragment">

    <RelativeLayout
        android:id="@+id/botaoBaixaDoPorto"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:background="@drawable/botao_branco_restaurantes">

        <ImageView
            android:id="@+id/foto_baixa_porto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/baixa_porto"
            android:background="@drawable/rounded"/>

        <TextView
            android:id="@+id/textViewBaixaPorto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginStart="13dp"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="33dp"
            android:layout_toEndOf="@+id/foto_baixa_porto"
            android:text="Baixa do Porto"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>


    <android.widget.Button
        android:id="@+id/botaoTerco"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:paddingStart="100dp"
        android:paddingEnd="50dp"
        android:background="@drawable/botao_branco_restaurantes"
        android:text="TerÃ§o"
        android:textAllCaps="false"
        android:textSize="20sp"/>

    <android.widget.Button
        android:id="@+id/botaoHospital"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:paddingStart="100dp"
        android:paddingEnd="50dp"
        android:background="@drawable/botao_branco_restaurantes"
        android:text="Hospital de Joaquim Urbano"
        android:textAllCaps="false"
        android:textSize="20sp"/>

    <android.widget.Button
        android:id="@+id/botaoPerfil"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right|top"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/botao_redondo"
        android:text="Perfil"
        android:textColor="#FFFFFF" />
</FrameLayout>